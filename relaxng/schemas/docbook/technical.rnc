# ======================================================================

[
   db:refname [ "property" ]
   db:refpurpose [ "A unit of data associated with some part of a computer system" ]
]
div {

   db.property.role.attribute = attribute role { text }

   db.property.attlist =
      db.property.role.attribute?
    & db.common.attributes
    & db.common.linking.attributes

   db.property =
      element property {
         db.property.attlist,
         db._text
      }
}

